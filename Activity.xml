<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tcs.experiment.MainActivity">

    <TextView
        android:id="@+id/transferText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_transfer"
        android:textSize="18sp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignBaseline="@+id/transfer"
        android:layout_alignBottom="@+id/transfer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="RelativeOverlap" />

    <Button
        android:id="@+id/transfer"
        android:layout_width="20dp"
        android:layout_height="23dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/imagenew"
        android:onClick="transferOrder" />

    <TextView
        android:id="@+id/materialText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/text_material"
        android:textSize="18sp"
        android:layout_below="@+id/transfer"
        android:layout_alignLeft="@+id/transferText"
        android:layout_alignStart="@+id/transferText" />

    <Button
        android:id="@+id/material"
        android:layout_width="20dp"
        android:layout_height="23dp"
        android:layout_alignBottom="@+id/materialText"
        android:layout_alignLeft="@+id/transfer"
        android:layout_alignStart="@+id/transfer"
        android:background="@drawable/imagenew"
        android:onClick="materialOrder" />
</RelativeLayout>
